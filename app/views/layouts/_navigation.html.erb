<header class="navbar navbar-fixed-top navbar-default">
  <div class="container">
    <%= link_to "MySermons", root_path, class: "btn btn-lg btn-success", id: "logo" %> 
  
  <ul class="nav_ul_item">
    <li class="dropdown">
      <%= link_to '#', class: "btn btn-default btn-danger dropdown-toggle", "data-toggle" => "dropdown" do %>
        Topics <b class="caret"></b>
        <% end %>
        <ul class="dropdown-menu">
          <% Topic.all.each do |topic| %>
            <li> <%= link_to topic.name, topic_path(topic) %></li>
          <% end %>
          <% if logged_in? %>
            <li class="divider"></li>
            <li>
              <%= link_to(new_topic_path) do %>
                New Topic
              <% end %>
            </li>
            
          <% end %>
        </ul>
    </li>
    </ul>
  <ul class="nav_ul_item">
    <li class="dropdown">
      <%= link_to '#', class: "btn btn-default btn-danger dropdown-toggle", "data-toggle" => "dropdown" do %>
        Category <b class="caret"></b>
        <% end %>
        <ul class="dropdown-menu">
          <% Category.all.each do |category| %>
            <li> <%= link_to category.name, category_path(category) %></li>
          <% end %>
          <% if logged_in? %>
            <li class="divider"></li>
            <li>
              <%= link_to(new_category_path) do %>
                New Category
              <% end %>
            </li>
            
          <% end %>
        </ul>
    </li>
  </ul>
  
  <% if logged_in? %>
  <div class="nav_item">
    <%= link_to "New Sermon", new_sermon_path, class: "btn btn-default" %>
  </div>
  <ul class="nav_item">
    <li class="dropdown">
      <%= link_to '#', class: "btn btn-default btn-danger dropdown-toggle", "data-toggle" => "dropdown" do %>
        <%= current_user.pastorname %> <b class="caret"></b>
        <% end %>
        <ul class="dropdown-menu">
          <li><%= link_to "View Profile", pastor_path(current_user) %></li>
          <li><%= link_to "Edit Profile", edit_pastor_path(current_user) %></li>
          <li class="divider"></li>
          <li><%= link_to "Logout", logout_path %></li>
        </ul>
    </li>
  </ul>
  
  <% else %>
  <div class="nav_item">
    <%= link_to "Log in", login_path, class: "btn btn-default btn-success" %>
  </div>
  <% end %>
  
  </div>
</header>